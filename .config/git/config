[include]
	path = config.os
[user]
	useConfigOnly = true
[core]
	autoCRLF = false
	preloadindex = true
	editor = nvim
	fscache = false
	quotepath = false
	excludesfile = ~/.config/git/ignore
[diff]
	algorithm = histogram
[color]
	ui = true
[merge]
	ff = false
[gui]
	encoding = utf-8
[pull]
	ff = only
[url "git@github.com:"]
	pushinsteadof = https://github.com/
[credential]
	helper = store --file ~/.config/git/credentials
	helper = cache --timeout 30000
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[push]
	autoSetupRemote = true
[init]
	defaultBranch = main
[worktree]
	useRelativePaths = true
