# terminal
terminal nyagos			call term_start(["C:/app/nyagos/nyagos.exe"], {"term_name": "NYAGOS", "term_finish": "close", "curwin": 1})
terminal MSYS2 MSYS		call term_start(["C:/app/msys64/usr/bin/bash.exe", "-l"], {"term_name": "MSYS2 MSYS", "term_finish": "close", "curwin": 1, "env": {"MSYSTEM": "MSYS2"}})
terminal MinGW x32		call term_start(["C:/app/msys64/usr/bin/bash.exe", "-l"], {"term_name": "MinGW x32", "term_finish": "close", "curwin": 1, "env": {"MSYSTEM": "MINGW32"}})
terminal MinGW x64		call term_start(["C:/app/msys64/usr/bin/bash.exe", "-l"], {"term_name": "MinGW x64", "term_finish": "close", "curwin": 1, "env": {"MSYSTEM": "MINGW64"}})

# utility
Putty					!start C:\app\putty\putty.exe
WinMerge				!start C:\app\WinMerge\WinMergeU.exe
WinSCP					!start C:\app\WinSCP\WinSCP.exe
Psytec QR Code Editor	!start C:\app\PsQREdit\PsQREdit.exe
spoitkun				!start C:\app\spoitkun\spoitkun.exe

# functions
OpenByFileManager		call AnsanlomsFunctions().OpenByFileManager()
OpenHosts				call AnsanlomsFunctions().OpenHosts()
CreateTagfile			call AnsanlomsFunctions().CreateTagfile()
OpenDailyMemo			call AnsanlomsFunctions().memo.Open()
OpenMemo				call AnsanlomsFunctions().memo.Open("memo")
OpenReport				call AnsanlomsFunctions().memo.Open("report/" . strftime("%Y%m%d"))
OpenMemoList			call AnsanlomsFunctions().memo.List()
