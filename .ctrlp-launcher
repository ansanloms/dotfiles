# vim:set noexpandtab:
# vim:set filetype=conf:

# terminal
terminal nyagos			tabnew | call term_start(["C:/app/nyagos/nyagos.exe"], {"term_name": "NYAGOS", "term_finish": "close", "curwin": 1})
terminal cmd			tabnew | call term_start(["cmd"], {"term_name": "cmd", "term_finish": "close", "curwin": 1})
terminal powershell		tabnew | call term_start(["powershell"], {"term_name": "powershell", "term_finish": "close", "curwin": 1})
terminal MSYS2 MSYS		tabnew | call term_start(["C:/app/msys64/usr/bin/bash.exe", "-l"], {"term_name": "MSYS2 MSYS", "term_finish": "close", "curwin": 1, "env": {"MSYSTEM": "MSYS2"}})
terminal MinGW x32		tabnew | call term_start(["C:/app/msys64/usr/bin/bash.exe", "-l"], {"term_name": "MinGW x32", "term_finish": "close", "curwin": 1, "env": {"MSYSTEM": "MINGW32"}})
terminal MinGW x64		tabnew | call term_start(["C:/app/msys64/usr/bin/bash.exe", "-l"], {"term_name": "MinGW x64", "term_finish": "close", "curwin": 1, "env": {"MSYSTEM": "MINGW64"}})

# msys / mingw
mintty MSYS2 MSYS		!start C:\app\msys64\msys2.exe
mintty MinGW x32		!start C:\app\msys64\mingw32.exe
mintty MinGW x64		!start C:\app\msys64\mingw64.exe

# utility
Putty					!start C:\app\putty\putty.exe
WinMerge				!start C:\app\WinMerge\WinMergeU.exe
WinSCP					!start C:\app\WinSCP\WinSCP.exe
Psytec QR Code Editor	!start C:\app\PsQREdit\PsQREdit.exe
spoitkun				!start C:\app\spoitkun\spoitkun.exe

# functions
OpenByFileManager		call AnsanlomsFunctions().OpenByFileManager()
OpenHosts				tabnew | call AnsanlomsFunctions().OpenHosts()
CreateTagfile			call AnsanlomsFunctions().CreateTagfile()
OpenDailyMemo			tabnew | call AnsanlomsFunctions().memo.Open()
OpenMemo				tabnew | call AnsanlomsFunctions().memo.Open("memo")
OpenReport				tabnew | call AnsanlomsFunctions().memo.Open("report/" . strftime("%Y%m%d"))
OpenMemoList			call AnsanlomsFunctions().memo.List()
