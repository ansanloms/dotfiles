{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "DISABLE_AUTOUPDATER": "1",
    "CLAUDE_CODE_SKIP_WINDOWS_PROFILE": "1"
  },
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:neovim.io)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(git fetch:*)",
      "mcp__plugin_context7_context7__resolve-library-id",
      "mcp__plugin_context7_context7__query-docs"
    ],
    "deny": [],
    "ask": [
      "Bash(gh pr create:*)",
      "Bash(rm:*)",
      "Bash(curl:*)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "deno task --cwd ~/.claude/scripts notify",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "^(?!permission_prompt).*",
        "hooks": [
          {
            "type": "command",
            "command": "deno task --cwd ~/.claude/scripts notify",
            "timeout": 10
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "deno task --cwd ~/.claude/scripts notify",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "deno task --cwd ~/.claude/scripts statusline",
    "padding": 0
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true
  },
  "outputStyle": "Explanatory",
  "language": "japanese",
  "spinnerTipsEnabled": false,
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "考え中だ",
      "調べてる",
      "読んでる",
      "書いてる",
      "直してる",
      "探してる",
      "組み立ててる",
      "睨んでる",
      "待ってろ",
      "黙って待ってろ",
      "今やってる",
      "睨み合ってる",
      "腹括って読んでる",
      "根こそぎ調べてる",
      "黙々とやってる",
      "泥臭く探してる",
      "腕まくりして取りかかってる",
      "仕込み中だ",
      "にゃーん"
    ]
  },
  "alwaysThinkingEnabled": true,
  "skipDangerousModePermissionPrompt": true,
  "terminalProgressBarEnabled": true
}
