{
  "env": {
    "DISABLE_AUTOUPDATER": "1",
    "CLAlUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "deno run -A ~/.claude/scripts/notify.ts",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "deno run -A ~/.claude/scripts/notify.ts",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "ccusage statusline",
    "padding": 0
  },
  "language": "japanese",
  "alwaysThinkingEnabled": true,
  "includeCoAuthoredBy": false
}
