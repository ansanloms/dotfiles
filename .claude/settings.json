{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "DISABLE_AUTOUPDATER": "1"
  },
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:neovim.io)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(git fetch:*)",
      "mcp__plugin_context7_context7__resolve-library-id",
      "mcp__plugin_context7_context7__query-docs"
    ],
    "deny": [],
    "ask": [
      "Bash(gh pr create:*)",
      "Bash(rm:*)",
      "Bash(curl:*)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "deno run --env-file=$HOME/.claude/scripts/.env -A ~/.claude/scripts/notify/windows.ts",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "deno run --env-file=$HOME/.claude/scripts/.env -A ~/.claude/scripts/notify/ntfy.ts",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "deno run --env-file=$HOME/.claude/scripts/.env -A ~/.claude/scripts/notify/windows.ts",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "deno run --env-file=$HOME/.claude/scripts/.env -A ~/.claude/scripts/notify/ntfy.ts",
            "timeout": 10
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "deno run --env-file=$HOME/.claude/scripts/.env -A ~/.claude/scripts/notify/windows.ts",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "deno run --env-file=$HOME/.claude/scripts/.env -A ~/.claude/scripts/notify/ntfy.ts",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "deno run -A ~/.claude/scripts/statusline.ts",
    "padding": 0
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "github@claude-plugins-official": true
  },
  "language": "japanese",
  "spinnerTipsEnabled": false,
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "愚かなお前にかわって頑張っています",
      "にゃーん"
    ]
  },
  "alwaysThinkingEnabled": true,
  "terminalProgressBarEnabled": true,
  "skipDangerousModePermissionPrompt": true
}
